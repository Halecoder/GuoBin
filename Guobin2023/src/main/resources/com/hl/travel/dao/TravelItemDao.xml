<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hl.travel.dao.TravelItemDao">
    <!--新增-->
    <insert id="add" parameterType="travelItem">
        insert into t_travelitem(code,name,sex,age,price,type,remark,attention)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>
    <update id="edit" parameterType="travelItem">
        update t_travelitem
        <set>
            <if test="code!=null and code.length>0">
                code=#{code},
            </if>
            <if test="name!=null and name.length>0">
                name=#{name},
            </if>
            <if test="sex!=null and sex.length>0">
                sex=#{sex},
            </if>
            <if test="age!=null and age.length>0">
                age=#{age},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="type!=null and type.length>0">
                type=#{type},
            </if>
            <if test="remark!=null and remark.length>0">
                remark=#{remark},
            </if>
            <if test="attention!=null and attention.length>0">
                attention=#{attention},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteById">
        delete from t_travelitem where id = #{id}
    </delete>
    <select id="findPage" resultType="com.hl.travel.entity.TravelItem">
        select * from t_travelitem
        <where>
            <if test="queryString != null and queryString.length > 0">
                name like '%'#{queryString}'%' or code = #{queryString}
            </if>
        </where>
    </select>
    <select id="findCountByTravelItemItemId" resultType="java.lang.Long">
        select count(*) from t_travelgroup_travelitem where travelitem_id = #{id}
    </select>
    <select id="findById" resultType="com.hl.travel.entity.TravelItem">
        select * from t_travelitem where id = #{id}
    </select>
</mapper>